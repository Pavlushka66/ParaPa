{
    "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "*": [
          "src/*"
        ]
      },
      "outDir": "./bin",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es6",
      "jsx": "react",
      "strict": true,
      "esModuleInterop":true,
      "lib": [
        "dom",
        "es2018",
        "scripthost"
      ],
      "experimentalDecorators": true,
      "downlevelIteration": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
    },
    "include": [
      "./src/**/*"
    ]
  }