{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "rootDirs": [
      "src"
    ],
    "outDir": "./bin",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2018",
      "scripthost"
    ],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "./src/**/*",
    "./node_modules/@types/puppeteer/index.d.ts"
  ]
}